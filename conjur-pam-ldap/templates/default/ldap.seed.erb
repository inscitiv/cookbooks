# Remove LDAP from nsswitch.conf now?
libnss-ldapd    libnss-ldapd/clean_nsswitch     boolean false
# Name services to configure:
# Choices: aliases, ethers, group, hosts, netgroup, networks, passwd, protocols, rpc, services, shadow
libnss-ldapd    libnss-ldapd/nsswitch   multiselect     group, passwd, shadow
# Enable shadow lookups through NSS?
libpam-ldapd    libpam-ldapd/enable_shadow      boolean true
# PAM profiles to enable:
libpam-runtime  libpam-runtime/profiles	multiselect     my_mkhomedir, unix, ldap
